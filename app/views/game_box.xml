<Alloy>
  <View id="row">
    <ImageView id="sport_icon"/>
    <View id="info_box" onClick="gameClick">
      <View id="top">
        <ImageView id="profile_photo"/>
        <Label id="name"/>
        <View id="description">
          <Label id="action"/>
          <Label id="game_type"/>
        </View>
        <View id="counts">
          <ImageView id="pin_icon"/>
          <Label id="distance"/>
          <ImageView id="people_icon"/>
          <Label id="headcount"/>
        </View>
      </View>
      <View id="bottom">
        <ImageView id="clock_icon"/>
        <Label id="date_time"/>
        <View id="bubble">
          <Label id="comment_count"/>
        </View>
      </View>
    </View>
  </View>
</Alloy>
